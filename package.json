{
  "name": "nodejs-es6-twig-gulp",
  "description": "",
  "version": "0.1.0",
  "license": "ISC",
  "author": "Rin Minase",
  "main": "index.js",
  "homepage": "https://github.com/RinMinase/nodejs-es6-twig-gulp#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RinMinase/nodejs-es6-twig-gulp.git"
  },
  "scripts": {
    "start": "webpack --mode development --progress true --watch",
    "build": "webpack --mode production --progress true",
    "build_old": "babel index.js --out-dir dist"
  },
  "dependencies": {
    "express": "^4.17.1",
    "http-errors": "~1.6.3",
    "twig": "^1.15.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.1.0",
    "debug": "~2.6.9",
    "dotenv-webpack": "^2.0.0",
    "ejs": "^3.1.5",
    "html-loader": "^1.3.0",
    "node-sass": "^4.14.1",
    "nodemon-webpack-plugin": "^4.3.2",
    "request": "^2.88.2",
    "twig-html-loader": "^0.1.8",
    "twig-loader": "^0.5.5",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "ignore": [],
    "watch": [
      "src",
      "index.js"
    ],
    "ext": "js,json,css,html,twig",
    "events": {
      "start": "node-sass --output-style compressed public/scss/index.scss dist/public/css/index.css",
      "restart": "node-sass --output-style compressed public/scss/index.scss dist/public/css/index.css"
    }
  }
}
